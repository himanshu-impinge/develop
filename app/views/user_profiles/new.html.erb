<div class="card w-50">
  <div class="card-header">
   User Profile
  </div>

  <div class="card-body">
    <%= form_for(@user_profile, local: true) do |f| %>
     
      <div class="form-row">
	   
	    <div class="form-group col-md-6">
	       <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, :class => 'form-control' %>
	    </div>
	   
	    <div class="form-group col-md-6">
	       <%= f.label :last_name %><br />
        	<%= f.text_field :last_name, autofocus: true, :class => 'form-control' %>
	    </div>

	  </div>
	  
	  <div class="form-group">
		    <%= f.label :gender %><br />
	        <%= f.select(:gender, [ "Male", "Female" ], {}, { :class => 'form-control' })%>
	  </div>

	  <div class="form-group">
	       <%= f.label :primary_address %><br />
        	<%= f.text_field :primary_address, autofocus: true, :class => 'form-control' %>
	  </div>


	   <div class="form-group">
		    <%= f.label "Mobile" %><br />
	        <%= f.number_field :primary_mobile, autofocus: true, :class => 'form-control' %>
	   </div>

      <div class="actions">
        <%= f.submit "Continue", :class => 'form-control btn btn-primary' %>
      </div>
      <hr>
     
    <% end %>

    </div>
  </div>
</div>